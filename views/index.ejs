<html>
    <head>
        <title>
            <%= title %>
        </title>
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.5.0/css/all.css" integrity="sha384-B4dIYHKNBt8Bc12p+WXckhzcICo0wtJAoU8YZTY5qE0Id1GSseTk6S+L3BlXeVIU" crossorigin="anonymous">
        <link rel="stylesheet" href="\css\style.css">
    </head>
    <body>
        <h1><i class="fas fa-address-book"></i> <%= title %> </h1>
       <div class="container">
        <div class="form-container">
            <form action="create-contact" method="post">
                <input name="name" placeholder="Your Name" type="text" required>
                <input name = "phone" placeholder="Your Phone number" maxlength="10" required type="number" required>
                <button type="submit"><i class="fa fa-plus" style="font-size:24px"></i>Add Contact</button>
            </form>
        </div>
        <div>
            <table>
                <tr>
                    <th> # </th>
                    <th> Name </th> 
                    <th> Phone </th>  
                    <th> Actions </th>
                </tr>
                <% var j=1 %>
                <% for(let i of  contact_list){ %>
                    
                    <tr>
                        <td><%= j++ %></td>
                        <td><%=i.name %></td>
                        <td><%=i.phone %></td>
                       <td>
                        <a href="/delete-contact/<%= i.phone %>"><i class="fa fa-edit"></i></a>
                        <i 
                        class="fa fa-minus-circle" 
                        style="color:red"></i>
                
                       </td>
                    </tr>
                <% } %>
            </table>
        </div>
       </div>
       <link type= "javascript" href="/assets/js/script.js">
    </body>
</html>